  color: #333;
  margin: 20rpx;
  height: 80rpx;
  margin-top: 30rpx;
  width: 710rpx;
  line-height: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.veryHot{
  color: #d43c00;
}
.author{
  font-size: 28rpx;
  color: #b2b0b3;

}
.hotSearch{
  height: 100rpx;
  line-height: 100rpx;
}
.rank{
  display: inline-block;
  width: 60rpx;
  text-align: center;
}
.search{
  width: 500rpx;
  margin: 10rpx 10rpx;
  margin-left: 50rpx;
  float: left;
  color: #333;
  padding-bottom: 10rpx;
  background-color: #f7f7f7;
  font-size: 32rpx;
  height: 65rpx;
  line-height: 65rpx;
  border-radius: 30rpx;
  padding-left: 20rpx;
}

.play{
  float: right;
}
.search_box{
  background-color: #fffc;
  height: 140rpx;
  padding-top: 40rpx;
}
.search_btn{
  margin-top: 10rpx;
  display: inline-block;
  color: #fff;
  background-color: #d43c00;
  /* height: 65rpx; */
  width: 50rpx;
}
.search_result{
  /* border-bottom:1px solid #b2b0b3; */
